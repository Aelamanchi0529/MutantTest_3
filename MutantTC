    [TestFixture]
    class CalcTests
    {
        [Test]
        public void GetAddition_Input7point8and5point5_Returns13point3()
        {

            //Arrange
            double num1 =7.8;
            double num2 = 5.5;

            double expectedResult = num1 + num2;

            Calc CalculatorTests = new Calc(num1, num2);

            //Act
            double actualResult = CalculatorTests.GetAddition();

            //Assert
            Assert.AreEqual(expectedResult, actualResult);
        }
        [Test]
        public void GetAddition_Input0point9and9_Returns9point9()
